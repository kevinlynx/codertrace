<div class="login_form">
<h2 class="window-title"><%= t :sign_in %></h2>
<div class="formbody">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= content_tag :div, flash[:alert], :class => "alert" if flash[:alert] %>
  <div>
    <%= f.label :email, t(:email) %><br />
    <%= f.email_field :email, :class => 'txt-ctrl' %>
  </div>
  <div>
    <%= f.label :password, t(:password) %><br/>
    <%= f.password_field :password, :class => 'txt-ctrl' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, t(:remember_me) %></div>
  <% end -%>

  <div>
    <%= f.submit t(:sign_in), :class => 'link-btn' %>
    <%= link_to t(:forgot_your_password), new_password_path(resource_name), 
        :class => "quiet", :style => "float: right" %>
  </div>
<% end %>
</div>
</div>
