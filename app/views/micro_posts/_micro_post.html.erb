<div class="post">
  <div class="meta">
    <%= gravatar_for micro_post.user, :size => 30 %>
    <span><strong>
      <% if @user.nil? %>
        <%= link_to micro_post.user.name, user_path(micro_post.user) %> 
      <% elsif @user == current_user %>
        <%= link_to micro_post.user.name, posts_user_path(current_user, :user => micro_post.user), 
            :remote => true, :title => t(:showhim) %>
      <% else %>
        <%= link_to micro_post.user.name, posts_user_path(@user, :user => micro_post.user), :remote => true %>
      <% end %>
    </strong> </span>
    <%= t :colon %> 
    <strong><a href='<%= micro_post.url %>'><%= micro_post.title %></a></strong>
  </div>
  <div class="brief">
    <p id="post-content-<%= micro_post.id %>">
      <%= render 'micro_posts/brief', :post => micro_post %>
    </p>
    <p class="date">
      <span class="quiet"><%= l micro_post.pub_date, :format => :long %></span>
    </p>
  </div>
</div>
