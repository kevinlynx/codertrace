<%= form_for(@user, :url => settings_password_p_path, :html => { :method => :put }) do |f| %>
  <dl>
    <dt><%= f.label :current_password, t(:current_password) %></dt>
    <dd><%= f.password_field :current_password, :class => 'txt-ctrl' %></dd>
  </dl>
  <dl>
    <dt><%= f.label :new_password, t(:new_password) %> </dt>
    <dd><%= f.password_field :password, :class => 'txt-ctrl' %></dd>
  </dl>
  <dl>
    <dt><%= f.label :password_confirmation, t(:password_confirmation) %></dt>
    <dd><%= f.password_field :password_confirmation, :class => 'txt-ctrl' %></dd>
  </dl>
  <dl> 
    <dd><%= f.submit t(:update), :class => 'link-btn' %> </dd>
  </dl>
<% end %>

