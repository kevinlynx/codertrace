<% if @job_id < 0 %>
  enable_refresh_link();
  $('#post-list').html("<%= escape_javascript(render('shared/posts')) %>")
  $('#posts-update-time').html("<%= escape_javascript(render('users/posts_update_time')) %>")
<% else %>
  var url = '<%= refresh_progress_user_path(@user, :job_id => @job_id, :page => params[:page]) %>'
  start_refresh_progress(url);
<% end %>

