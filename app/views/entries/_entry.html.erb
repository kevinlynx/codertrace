<% entry ||= @entry %>
<% unless entry.completed? %>
  <% if entry.user == current_user %>
    <div class="entry" id="entry-<%= entry.id %>">
      <div class="meta">
        <div class="title">
          <span><strong>
            <% if entry.failed? %>
              <%= link_to entry.url, edit_entry_path(entry), :id => "entry-tip-#{entry.id}" %>
            <% else %>
              <%= link_to t(:getting_entry), edit_entry_path(entry), :id => "entry-tip-#{entry.id}" %>
            <% end %>
          </strong></span>
        </div>
      </div>
      <div class="desc">
        <span id="entry-result-<%= entry.id %>"><%= render 'entries/status', :entry => entry %></span>
        <%= render 'entries/link', :entry => entry %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="entry" id="entry-<%= entry.id %>">
   <div class="meta">
      <div class="title">
        <span><strong>
          <% if entry.user == current_user %>
            <%= link_to entry.title, edit_entry_path(entry) %>
          <% else %>
            <%= entry.title %>
          <% end %>
        </strong></span>
      </div>
      <div class="tip">
        <span><%= t :tag %><%= t :colon %><%= entry.tag %></span>
      </div>
    </div>
    <div class="url">
      <%= link_to entry.url, entry.url %>
    </div>
    <div class="desc">
      <p><%= entry.description %></p>
      <%= render 'entries/link', :entry => entry %>
    </div>
  </div>
<% end %>
